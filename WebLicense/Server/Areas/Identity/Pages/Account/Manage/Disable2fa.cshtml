@page
@model Disable2faModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Disable2faModel> ResL
@{
    ViewData["Title"] = ResL["Title"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<h2 class="mb-4">@ViewData["Title"]</h2>
<partial name="Account/_StatusMessage" for="StatusMessage" />
<div class="alert alert-warning" role="alert">
    <div class="fw-bold">@ResL["Message.1"]</div>
    <br />
    @ResL["Message.2.1"] <a asp-page="./ResetAuthenticator" class="link-primary">@ResL["Message.2.2"]</a>@ResL["Message.2.3"]
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">@ResL["Text.Disable2FA"]</button>
    </form>
</div>
